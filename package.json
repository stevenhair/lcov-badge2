{
  "name": "lcov-badge2",
  "version": "1.0.3",
  "description": "Generate a badge from a LCOV report",
  "keywords": [
    "lcov",
    "badge",
    "coverage",
    "test"
  ],
  "bin": "main.js",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/stevenhair/lcov-badge2.git"
  },
  "author": "Steve Hair <me@stevenhair.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stevenhair/lcov-badge2/issues"
  },
  "homepage": "https://github.com/stevenhair/lcov-badge2#readme",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "coverage": "jest --coverage",
    "postbuild": "gulp postbuild",
    "prebuild": "gulp clean",
    "start:dev": "ts-node src/main.ts",
    "start:prod": "dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "badge-up": "^3.0.0",
    "minimist": "^1.2.5",
    "minimist-options": "^4.1.0",
    "parse-lcov": "^1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/minimist": "^1.2.2",
    "@types/minimist-options": "^4.0.1",
    "@types/node": "^20.1.4",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "del": "^7.0.0",
    "eslint": "^8.4.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-unicorn": "^46.0.0",
    "gulp": "^4.0.2",
    "gulp-header": "^2.0.9",
    "jest": "^29.2.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.4.0",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=14"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxWorkers": 1
  }
}
